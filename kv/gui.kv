#: import ScreenManager kivy.uix.screenmanager.ScreenManager
#: import Screen kivy.uix.screenmanager.ScreenManager
#: import Video kivy.uix.video.Video
#: import WipeTransition kivy.uix.screenmanager.WipeTransition
#: import FadeTransition kivy.uix.screenmanager.FadeTransition
<Container>:
    display: display
    rows: 3
    Header:
        canvas.before:
            Color:
                rgba: [x/255 for x in (30,31,38,255)]
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'horizontal'
        id: header
        size_hint: (1, None)
        height: 75
        padding: [20,0,0,0]
        Label:
            id: header_title
            size_hint: (1, 1)
            font_size: dp(30)
            text: 'Select a File'
            top: header.top
            text_size: self.size
            valign: 'middle'
            halign: 'left'
    BoxLayout:
        orientation: "horizontal"
        VideoPanel:
            id: video_panel



            
        MetadataPanel:
            canvas.before:
                Color:
                    rgba: [x/255 for x in (30,31,38,255)]
                Rectangle:
                    pos: self.pos
                    size: self.size
            width: 300
            size_hint: (None, 1)
            size_hint_min_x: 500
    Footer:
        canvas.before:
            Color:
                rgba: [x/255 for x in 	(116,111,145,255)]
            Rectangle:
                pos: self.pos
                size: self.size
        id: display
        font_size: dp(50)
        text: 'Testing'
        height: 75
        size_hint: (1, None)

<VideoPanel>:
    transition: FadeTransition()
    OpenVideoScreen:
        id: open_video
        name: 'OpenVideo'
        manager: 'video_panel'
        OpenVideo
    VideoPreview:
        id: video_preview
        name: 'VideoPreview'
        manager: 'video_panel'
        Image:
            id: video_preview_player
            
